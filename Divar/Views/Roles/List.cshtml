@model IEnumerable<IdentityRole>
<div style="text-align: center;">
    <h4>   <a asp-action="Index" asp-controller="Admin" style="text-decoration: none;">بازگشت به پنل ادمین</a>  </h4>
</div>
<hr>

<br />
<h1 class="text-center">لیست نقش‌ها</h1>

<div class="table-responsive">
    <table class="table table-bordered table-striped text-center" style="width: 50%; margin: auto;">
        <thead class="thead-dark">
            <tr>
                <th class="text-center">نام نقش</th>
                <th class="text-center">ویرایش</th>
                <th class="text-center">حذف</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td class="text-center">@role.Name</td>
                    <td class="text-center">
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@role.Id">ویرایش</a>
                    </td>
                    <td class="text-center">
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@role.Id">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-center my-3">
    <a asp-action="Create" class="btn btn-primary mx-2">ایجاد نقش جدید</a>
    <a asp-action="ManageRole" class="btn btn-secondary mx-2">اختصاص نقش به کاربر</a>
</div>

<style>
    .table-bordered {
        border: 2px solid black;
    }

        .table-bordered th, .table-bordered td {
            border: 2px solid black;
        }
</style>
