@model IEnumerable<Divar.Models.CustomUser>

<h2>Select a User to Manage Roles</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Select</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="ManageRole" asp-route-id="@user.Id" class="btn btn-primary">Select</a>
                </td>
            </tr>
        }
    </tbody>
</table>
