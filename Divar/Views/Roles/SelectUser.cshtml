@model IEnumerable<Divar.Models.CustomUser>

<div style="text-align: center;">
    <h3>   <a asp-action="Index" asp-controller="Admin" style="text-decoration: none;">بازگشت به پنل ادمین</a>  </h3>
</div>

<hr />
<h2 class="text-center">کاربر را برای اعطای نقش انتخاب کنید</h2>
<br />
<div class="table-responsive" style="max-width: 800px; margin: auto;">
    <table class="table table-bordered table-striped text-center">
        <thead class="thead-dark">
            <tr>
                <th class="text-center">نام</th>
                <th class="text-center">نام خانوادگی</th>
                <th class="text-center">ایمیل</th>
                <th class="text-center">انتخاب کاربر</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td class="text-center">@user.FirstName</td>
                    <td class="text-center">@user.LastName</td>
                    <td class="text-center">@user.Email</td>
                    <td class="text-center">
                        <a asp-action="ManageRole" asp-route-id="@user.Id" class="btn btn-primary">Select</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table-bordered {
        border: 2px solid black;
    }
    .table-bordered th, .table-bordered td {
        border: 2px solid black;
    }
</style>
