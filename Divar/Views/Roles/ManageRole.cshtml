@model Divar.ViewModel.ManageRoleViewModel

<h3>Manage User Roles</h3>

<table class="table table-striped table-bordered">
    <tr>
        <td>Name</td>
        <td>@Model.CustomUserName</td>
    </tr>
</table>
<hr />
<h3 class="text-bg-primary">User Roles</h3>
<form asp-action="ManageRole" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="CustomUserId" />
    @foreach (var item in Model.AllRoles)
    {
        <input type="checkbox" name="Roles" checked="@Model.UserRoles.Contains(item.Name)" value="@item.Name">
        <label>@item.Name</label>
    }
    <div class="py-2">
        <button type="submit" class="btn btn-primary">Update Roles</button>
        <a asp-action="List" class="btn btn-secondary">Return</a>
    </div>
</form>
