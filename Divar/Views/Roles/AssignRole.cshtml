@model Divar.ViewModel.AssignRoleViewModel

@{
    ViewData["Title"] = "Assign Role to User";
}

<h2>Assign Role to User</h2>

<form asp-action="AssignRole" method="post">
    <div class="form-group">
        <label asp-for="UserId">User ID</label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoleName">Role Name</label>
        <select asp-for="RoleName" class="form-control" asp-items="@(new SelectList(ViewBag.Roles, "Name", "Name"))">
            <option value="">Select Role</option>
        </select>
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Assign Role</button>
</form>

<div>
    <a asp-action="List">Back to Role List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
