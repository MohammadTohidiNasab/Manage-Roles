@model Divar.Models.Advertisement
<html dir="rtl">


<h2 style="text-align: center;">ثبت آگهی</h2>

<div id="loading" style="display:none; position: fixed; left: 0; top: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.5); z-index: 9999; color: white; text-align: center;">
    <h2>در حال ثبت آگهی...</h2>
    <div class="spinner-border" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>

<div style="text-align: center;">
    <form asp-action="Create" method="post" id="advertisementForm">
        <input type="hidden" asp-for="Category" />

        <div class="form-group">
            <label asp-for="Title" class="text-center">تیتر</label>
            <input asp-for="Title" class="form-control" style="width: 70%; margin: 0 auto;" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Content" class="text-center">محتوا</label>
            <textarea asp-for="Content" class="form-control" style="width: 70%; margin: 0 auto;"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="text-center">قیمت</label>
            <input asp-for="Price" type="number" class="form-control" value="@Model.Price ?? 0" style="width: 70%; margin: 0 auto;" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl" class="text-center">لینک تصویر</label>
            <input asp-for="ImageUrl" class="form-control" style="width: 70%; margin: 0 auto;" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl2" class="text-center">لینک تصویر</label>
            <input asp-for="ImageUrl2" class="form-control" style="width: 70%; margin: 0 auto;" />
            <span asp-validation-for="ImageUrl2" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl3" class="text-center">لینک تصویر</label>
            <input asp-for="ImageUrl3" class="form-control" style="width: 70%; margin: 0 auto;" />
            <span asp-validation-for="ImageUrl3" class="text-danger"></span>
        </div>

        @if (Model.Category == Divar.Models.CategoryType.کتاب)
        {
            <div class="form-group">
                <label asp-for="BookAuthor" class="text-center">نویسنده کتاب</label>
                <input asp-for="BookAuthor" class="form-control" style="width: 70%; margin: 0 auto;" />
                <span asp-validation-for="BookAuthor" class="text-danger"></span>
            </div>
        }
        @if (Model.Category == Divar.Models.CategoryType.خانه)
        {
            <div class="form-group">
                <label asp-for="HomeSize" class="text-center">اندازه خانه</label>
                <input asp-for="HomeSize" class="form-control" style="width: 70%; margin: 0 auto;" />
                <span asp-validation-for="HomeSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeAddress" class="text-center">آدرس خانه</label>
                <input asp-for="HomeAddress" class="form-control" style="width: 70%; margin: 0 auto;" />
                <span asp-validation-for="HomeAddress" class="text-danger"></span>
            </div>
        }
        @if (Model.Category == Divar.Models.CategoryType.موبایل)
        {
            <div class="form-group">
                <label asp-for="MobileBrand" class="text-center">برند موبایل</label>
                <input asp-for="MobileBrand" class="form-control" style="width: 70%; margin: 0 auto;" />
                <span asp-validation-for="MobileBrand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SimCardsNumber" class="text-center">تعداد سیم‌کارت‌ها</label>
                <input asp-for="SimCardsNumber" class="form-control" value="@Model.SimCardsNumber ?? 0" style="width: 70%; margin: 0 auto;" />
                <span asp-validation-for="SimCardsNumber" class="text-danger"></span>
            </div>
        }
        @if (Model.Category == Divar.Models.CategoryType.ماشین)
        {
            <div class="form-group">
                <label asp-for="CarBrand" class="text-center">برند ماشین</label>
                <input asp-for="CarBrand" class="form-control" style="width: 70%; margin: 0 auto;" />
                <span asp-validation-for="CarBrand" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group text-right">
                <label class="text-right">نوع گیربکس</label>
                <div class="form-check d-inline-flex align-items-center justify-content-center">
                    <label class="form-check-label" for="automatic" style="margin-right: 5px;">اتوماتیک</label>
                    <input class="form-check-input" type="radio" asp-for="GearboxType" value="true" id="automatic" style="margin-left: 5px;" />
                </div>
                <div class="form-check d-inline-flex align-items-center justify-content-center">
                    <label class="form-check-label" for="manual" style="margin-right: 5px;">دندهای</label>
                    <input class="form-check-input" type="radio" asp-for="GearboxType" value="false" id="manual" style="margin-left: 5px;" />
                </div>
                <span asp-validation-for="GearboxType" class="text-danger"></span>
            </div>
        }

        <br />
        <button type="submit" class="btn btn-success">ایجاد اگهی</button>
        <a asp-action="Index" class="btn btn-secondary">انصراف</a>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById("advertisementForm").onsubmit = function () {
            // نمایش لودینگ
            document.getElementById("loading").style.display = "block";
            // غیرفعال کردن دکمه ارسال
            document.querySelector('button[type="submit"]').disabled = true;
        };

        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("Price").value = "";
        });
    </script>
}



</html>
