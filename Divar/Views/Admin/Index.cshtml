<div id="users">

<b>
    <h1 style="text-align: center;">
        لیست کاربران
    </h1>
</b>

    <div style="text-align: center; margin-top: 20px;">
        <!-- دکمه‌ها برای اسکرول -->
        <button onclick="scrollToSection('ads')">لیست آگهی‌ها</button>
        <button onclick="scrollToSection('comments')"> لیست کامنت‌ها</button>
    </div>

<table>
    <thead>
        <tr>
            <th>Id "click for delete User"</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>PhoneNumber</th>
            <th>PasswordHash</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usr in Model.Users)
        {
            <tr>
                <td><a asp-action="DeleteUser" asp-route-id="@usr.Id"> @usr.Id</a></td>
                <td>@usr.FirstName</td>
                <td>@usr.LastName</td>
                <td>@usr.Email</td>
                <td>@usr.PhoneNumber</td>
                <td>@usr.PasswordHash</td>
            </tr>
        }
    </tbody>
</table>

</div>





<br />
<hr />
    <b>
        <hr />
