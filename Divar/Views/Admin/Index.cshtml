                                <th>Price</th>
                                <th>Created Date</th>
                                <th>Author</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ad in Model.Advertisements.Where(a => a.Category == CategoryType.کتاب))
                            {
                                <tr>
                                    <td>@ad.Id</td>
                                    <td>@ad.Title</td>
                                    <td>@ad.Content</td>
